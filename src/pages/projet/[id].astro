    <script>
        // Gestion de l'accord√©on
        const buttons = document.querySelectorAll(".accordion-btn");
        const sections = document.querySelectorAll(".content-section");

        buttons.forEach((button) => {
            button.addEventListener("click", () => {
                const sectionName = button.getAttribute("data-section");

                // Retirer l'√©tat actif de tous les boutons
                buttons.forEach((btn) => {
                    btn.classList.remove("bg-turquoise/10", "border-turquoise");
                    btn.classList.add("bg-transparent", "border-turquoise/30");
                });

                // Ajouter l'√©tat actif au bouton cliqu√©
                button.classList.remove(
                    "bg-transparent",
                    "border-turquoise/30",
                );
                button.classList.add("bg-turquoise/10", "border-turquoise");

                // Cacher toutes les sections
                sections.forEach((section) => {
                    section.classList.add("hidden");
                    section.classList.remove("active");
                });

                // Afficher la section correspondante
                const targetSection = document.querySelector(
                    `.content-section[data-section="${sectionName}"]`,
                );
                if (targetSection) {
                    targetSection.classList.remove("hidden");
                    targetSection.classList.add("active");
                }
            });
        });
    </script>

