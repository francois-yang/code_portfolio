---
// Footer du portfolio
---

<footer class="bg-bleu-fonce border-t border-turquoise">
	<!-- Texte en haut du footer -->
	<div class="text-center py-8 border-b border-blanc/10">
		<p class="text-blanc text-lg">Je reste disponible pour échanger avec vous !</p>
	</div>

	<!-- Contenu principal du footer -->
	<div class="max-w-7xl mx-auto px-6 py-12 relative">
		<!-- Trait vertical central -->
		<div class="hidden md:block absolute left-1/2 top-0 bottom-0 -translate-x-1/2">
			<img src="/ligne-numerique-footer.svg" alt="" class="h-full opacity-100" style="filter: brightness(1.5);" />
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start relative z-10">
			<!-- Colonne gauche : Logo et copyright -->
			<div class="space-y-8">
				<!-- Logo -->
				<div class="flex items-start">
					<img src="/logo.svg" alt="Logo" class="w-20 h-20" />
				</div>

				<!-- Texte copyright -->
				<div class="space-y-2 text-blanc/70">
					<p>Tous contenus réservé de droit</p>
					<p>@2025</p>
				</div>
			</div>

			<!-- Colonne droite : Réseaux sociaux -->
			<div class="space-y-6 md:pl-12">
				<h3 class="text-turquoise text-2xl font-bold">Mes réseaux</h3>

				<div class="space-y-4">
					<!-- LinkedIn -->
					<div class="flex items-center gap-3">
						<span class="text-blanc">Linkedin</span>
						<a href="#" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
