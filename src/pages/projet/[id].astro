---
import Layout from "../../layouts/Layout.astro";
import {
    pb,
    type Projet,
    type SectionProjet,
    getImageUrl,
} from "../../lib/pocketbase";


const { id } = Astro.params;


let projet: Projet | null = null;
let sections: SectionProjet[] = [];
let error: string | null = null;

try {
    // Récupérer le projet
    projet = await pb.collection("projet").getOne<Projet>(id!);
    console.log("Projet récupéré:", projet.nom_projet_hero);

    // Essayer d'abord avec le filtre PocketBase
    try {
        sections = await pb
            .collection("sections_projets")
            .getFullList<SectionProjet>({
                filter: `projet_id = "${id}"`,
                sort: "+ordre",
            });
        console.log(`${sections.length} sections récupérées`);
    } catch (filterError) {
        console.warn(
            "Filtre PocketBase échoué, tentative avec fetch manuel:",
            filterError,
        );

        
        const allSections = await pb
            .collection("sections_projets")
            .getFullList<SectionProjet>({
                sort: "created",
            });

       
        sections = allSections.filter((section) => section.projet_id === id);
        console.log(
            "Sections filtrées manuellement:",
            sections.length,
            "sections trouvées",
        );
    }

    if (sections.length === 0) {
        console.warn("Aucune section trouvée pour ce projet !");
    }
} catch (e) {
    error = "Projet non trouvé";
    console.error(e);
}


if (!projet) {
    return Astro.redirect("/projet/projets");
}


const imgHeroUrl = getImageUrl(projet, projet.img_hero);


const couleurConfig: Record<
    string,
    { from: string; via: string; to: string; decoration: string }
> = {
    violet: {
        from: "#2a1a4a",
        via: "#3a2a5a",
        to: "#4a1a5a",
        decoration: "#a855f7",
    },
    bleu: {
        from: "#1a1a4a",
        via: "#1a2a5a",
        to: "#0a3a5a",
        decoration: "#00ffee",
    },
    vert: {
        from: "#1a4a2a",
        via: "#1a5a3a",
        to: "#0a5a2a",
        decoration: "#10b981",
    },
    rose: {
        from: "#4a1a3a",
        via: "#5a1a4a",
        to: "#5a0a3a",
        decoration: "#ec4899",
    },
    jaune: {
        from: "#6b5c1e", 
        via: "#8a771f", 
        to: "#a89020", 
        decoration: "#FFE074", 
    },
};

const couleur = projet.couleur_hero || "bleu";
const colors = couleurConfig[couleur] || couleurConfig.bleu;
---

<Layout>
    <!-- Section Hero -->
    <section
        class="relative py-16 px-6 overflow-hidden"
        style={`background: linear-gradient(to bottom right, ${colors.from}, ${colors.via}, ${colors.to});`}
    >
        <!-- Decorations circulaires -->
        <div
            class="absolute top-0 left-0 w-96 h-96 rounded-full blur-3xl"
            style={`background-color: ${colors.decoration}; opacity: 0.05;`}
        >
        </div>
        <div
            class="absolute bottom-0 right-0 w-96 h-96 rounded-full blur-3xl"
            style={`background-color: ${colors.decoration}; opacity: 0.05;`}
        >
        </div>

        <!-- SVG décoratifs uploadés depuis PocketBase -->
        {
            projet.svg_hero &&
                Array.isArray(projet.svg_hero) &&
                projet.svg_hero.length > 0 && (
                    <>
                        {projet.svg_hero.map((svg, index) => {
                            
                            const isDecor3 = svg.includes("decor3");
                            const isGroup98 = svg.includes("group9_8");

                     
                            let position;
                            let zIndex = index + 1;
                            let opacityClass = "opacity-15";
                            let filterStyle = `filter: brightness(0) saturate(100%) invert(1) sepia(1) saturate(5) hue-rotate(${couleur === "violet" ? "270deg" : couleur === "vert" ? "90deg" : couleur === "rose" ? "310deg" : "180deg"});`;

                            if (isDecor3) {
                            
                                position = {
                                    bottom: "0",
                                    right: "0",
                                    width: "200px",
                                };
                                opacityClass = "opacity-100";
                                filterStyle =
                                    "filter: brightness(0) saturate(100%) invert(56%) sepia(73%) saturate(2619%) hue-rotate(238deg) brightness(102%) contrast(101%);";
                            } else if (isGroup98) {
                               
                                position = {
                                    top: "30%",
                                    right: "5%",
                                    width: "450px",
                                    transform: "translateY(-50%)",
                                };
                                zIndex = 0;
                                opacityClass = "opacity-20";
                            } else {
                                const positions = [
                                    { top: "10%", left: "5%", width: "200px" }, // Haut gauche
                                    { top: "10%", right: "5%", width: "180px" }, // Haut droite
                                    {
                                        bottom: "10%",
                                        left: "5%",
                                        width: "220px",
                                    }, // Bas gauche
                                    {
                                        bottom: "10%",
                                        right: "5%",
                                        width: "190px",
                                    }, // Bas droite
                                    {
                                        top: "50%",
                                        left: "2%",
                                        width: "150px",
                                        transform: "translateY(-50%)",
                                    }, // Milieu gauche
                                    {
                                        top: "50%",
                                        right: "2%",
                                        width: "150px",
                                        transform: "translateY(-50%)",
                                    }, // Milieu droite
                                ];
                                position = positions[index % positions.length];
                            }

                            try {
                                const svgUrl = getImageUrl(projet, svg);
                                return (
                                    <div
                                        class="absolute pointer-events-none"
                                        class:list={[opacityClass]}
                                        style={`top: ${position.top || "auto"}; bottom: ${position.bottom || "auto"}; left: ${position.left || "auto"}; right: ${position.right || "auto"}; width: ${position.width}; transform: ${position.transform || "none"}; z-index: ${zIndex};`}
                                    >
                                        <img
                                            src={svgUrl}
                                            alt={`Decoration ${index + 1}`}
                                            class="w-full h-auto svg-hero-decoration"
                                            style={filterStyle}
                                        />
                                    </div>
                                );
                            } catch (error) {
                                console.error(
                                    `Erreur lors du chargement du SVG: ${svg}`,
                                    error,
                                );
                                return null;
                            }
                        })}
                    </>
                )
        }

        <div class="relative z-10 max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Colonne gauche : Titre et image -->
                <div class="space-y-8">
                    <h1 class="text-5xl font-bold text-blanc typewriter">
                        Projet <span style={`color: ${colors.decoration};`}
                            >{projet.nom_projet_hero}</span
                        >
                    </h1>

                    <!-- Image hero -->
                    <div
                        class="relative rounded-2xl overflow-hidden border-2 border-turquoise/30 shadow-[0_0_40px_rgba(0,255,238,0.2)] bg-linear-to-br from-turquoise/10 to-bleu-fonce"
                    >
                        <img
                            src={imgHeroUrl}
                            alt={projet.nom_projet_hero}
                            class="w-full h-auto"
                        />
                    </div>
                </div>

                <!-- Colonne droite : Infos complémentaires -->
                <div class="space-y-6">
                    <!-- Info 1 -->
                    <div
                        class="rounded-xl p-6 transition-all duration-300"
                        style={`background-color: ${colors.decoration}15; border: 1px solid ${colors.decoration}4D; &:hover { border-color: ${colors.decoration}; }`}
                    >
                        <p
                            class="text-blanc text-lg leading-relaxed typewriter"
                        >
                            {projet.info1_hero}
                        </p>
                    </div>

                    <!-- Info 2 -->
                    <div
                        class="inline-block rounded-full px-6 py-3"
                        style={`background-color: ${colors.decoration}33; border: 2px solid ${colors.decoration};`}
                    >
                        <p class="text-blanc font-semibold typewriter">
                            {projet.info2_hero}
                        </p>
                    </div>

                    <!-- Info 3 -->
                    <div
                        class="inline-block rounded-full px-6 py-3 ml-4"
                        style={`background-color: ${colors.decoration}33; border: 2px solid ${colors.decoration};`}
                    >
                        <p class="text-blanc font-semibold typewriter">
                            {projet.info3_hero}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Body avec Accordéon -->

    <section
        data-scroll-reveal
        data-direction="up"
        data-delay="0"
        class="relative py-20 px-0 bg-bleu-fonce overflow-hidden"
    >
        <div class="relative z-10 max-w-7xl mx-auto">
            <!-- Accordéon horizontal en haut (4 items statiques) -->
            <nav
                class="bg-bleu-fonce border-2 border-turquoise/30 rounded-2xl p-4 mb-12"
            >
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4"
                >
                    <!-- Item 1 : Description du projet -->
                    <button
                        class="accordion-btn active px-6 py-4 rounded-xl bg-turquoise/10 border border-turquoise transition-all duration-300 flex items-center justify-between group hover:bg-turquoise/20"
                        data-section="description"
                    >
                        <span
                            class="text-blanc font-semibold group-hover:text-turquoise transition-colors"
                            >Description du projet</span
                        >
                    </button>

                    <!-- Item 2 : Mon rôle -->
                    <button
                        class="accordion-btn px-6 py-4 rounded-xl bg-transparent border border-turquoise/30 hover:bg-turquoise/20 hover:border-turquoise transition-all duration-300 flex items-center justify-between group"
                        data-section="role"
                    >
                        <span
                            class="text-blanc font-semibold group-hover:text-turquoise transition-colors"
                            >Mon rôle</span
                        >
                    </button>

                    <!-- Item 3 : Logiciels utilisés -->
                    <button
                        class="accordion-btn px-6 py-4 rounded-xl bg-transparent border border-turquoise/30 hover:bg-turquoise/20 hover:border-turquoise transition-all duration-300 flex items-center justify-between group"
                        data-section="logiciels"
                    >
                        <span
                            class="text-blanc font-semibold group-hover:text-turquoise transition-colors"
                            >Logiciels utilisés</span
                        >
                    </button>

                    <!-- Item 4 : Lien du site -->
                    <button
                        class="accordion-btn px-6 py-4 rounded-xl bg-transparent border border-turquoise/30 hover:bg-turquoise/20 hover:border-turquoise transition-all duration-300 flex items-center justify-between group"
                        data-section="lien"
                    >
                        <span
                            class="text-blanc font-semibold group-hover:text-turquoise transition-colors"
                            >Lien du site</span
                        >
                    </button>
                </div>
            </nav>

            <!-- Contenu dynamique -->
            <div class="space-y-8">
                <!-- Section 1 : Description du projet -->
                <div class="content-section active" data-section="description">
                    <div class="flex items-center gap-4 mb-8">
                        <h2 class="text-3xl font-bold text-turquoise">
                            Description du projet
                        </h2>
                    </div>

                    <!-- Texte intro -->
                    <div
                        class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-8 mb-12"
                    >
                        <p
                            class="text-blanc text-lg leading-relaxed whitespace-pre-line"
                        >
                            {projet.description_projet_texte_intro}
                        </p>
                    </div>

                    <!-- Sections avec numérotation automatique -->
                   {
    sections.length > 0 ? (
        <div class="space-y-24">
            {(() => {
                const logoSection = sections.find(
                    (s) =>
                        s.titre_section?.toLowerCase() ===
                        "logo",
                );
                const mockupSection = sections.find(
                    (s) =>
                        s.titre_section?.toLowerCase() ===
                        "mockup",
                );
                const otherSections = sections.filter(
                    (s) =>
                        s.titre_section?.toLowerCase() !==
                            "logo" &&
                        s.titre_section?.toLowerCase() !==
                            "mockup",
                );

                return (
                    <>
                        {/* Sections normales avec alternance ET NUMÉROS */}
                        {otherSections.map(
                            (section, index) => (
                                <div
                                    class={`grid lg:grid-cols-2 gap-12 items-start ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}
                                >
                                                        {index % 2 === 0 ? (
                                                            <>
                                                                {/* Image à gauche */}
                                                                {section.img_section && (
                                                                    <div class="relative rounded-2xl overflow-hidden border-2 border-turquoise/30 shadow-[0_0_30px_rgba(0,255,238,0.2)] bg-turquoise/5">
                                                                        <img
                                                                            src={getImageUrl(
                                                                                section,
                                                                                section.img_section,
                                                                            )}
                                                                            alt={
                                                                                section.titre_section
                                                                            }
                                                                            class="w-full h-auto object-cover"
                                                                        />
                                                                    </div>
                                                                )}

                                                                {}
                                                                <div class="flex flex-col justify-center">
                                                                    <div class="flex items-center gap-4 mb-6">
                                                                        <span class="text-4xl font-bold text-turquoise/20">
                                                                            {String(
                                                                                index +
                                                                                    1,
                                                                            ).padStart(
                                                                                2,
                                                                                "0",
                                                                            )}
                                                                        </span>
                                                                        <h3 class="text-3xl font-bold border-l-4 border-turquoise pl-6 bg-white text-[#072255] rounded-lg px-4 py-2">
                                                                            {
                                                                                section.titre_section
                                                                            }
                                                                        </h3>
                                                                    </div>
                                                                    <div class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-8">
                                                                        <p class="text-blanc text-lg leading-relaxed whitespace-pre-line">
                                                                            {
                                                                                section.description_section
                                                                            }
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </>
                                                        ) : (
                                                            <>
                                                                {}
                                                                <div class="flex flex-col justify-center lg:order-1">
                                                                    <div class="flex items-center gap-4 mb-6">
                                                                        <span class="text-4xl font-bold text-turquoise/20">
                                                                            {String(
                                                                                index +
                                                                                    1,
                                                                            ).padStart(
                                                                                2,
                                                                                "0",
                                                                            )}
                                                                        </span>
                                                                        <h3 class="text-3xl font-bold border-l-4 border-turquoise pl-6 bg-white text-[#072255] rounded-lg px-4 py-2">
                                                                            {
                                                                                section.titre_section
                                                                            }
                                                                        </h3>
                                                                    </div>
                                                                    <div class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-8">
                                                                        <p class="text-blanc text-lg leading-relaxed whitespace-pre-line">
                                                                            {
                                                                                section.description_section
                                                                            }
                                                                        </p>
                                                                    </div>
                                                                </div>

                                                                {/* Image à droite */}
                                                                {section.img_section && (
                                                                    <div class="relative rounded-2xl overflow-hidden border-2 border-turquoise/30 shadow-[0_0_30px_rgba(0,255,238,0.2)] bg-turquoise/5 lg:order-2">
                                                                        <img
                                                                            src={getImageUrl(
                                                                                section,
                                                                                section.img_section,
                                                                            )}
                                                                            alt={
                                                                                section.titre_section
                                                                            }
                                                                            class="w-full h-auto object-cover"
                                                                        />
                                                                    </div>
                                                                )}
                                                            </>
                                                        )}
                                                    </div>
                                                ),
                                            )}

                                            {/* Section Logo + Mockup côte à côte AVEC NUMÉROS */}
                                            {logoSection && mockupSection && (
                                                <div class="grid lg:grid-cols-2 gap-8">
                                                    {/* Colonne gauche : Logo */}
                                                    <div class="space-y-6">
                                                        <div class="flex items-center gap-4">
                                                            <span class="text-4xl font-bold text-turquoise/20">
                                                                {String(
                                                                    otherSections.length +
                                                                        1,
                                                                ).padStart(
                                                                    2,
                                                                    "0",
                                                                )}
                                                            </span>
                                                            <h3 class="text-3xl font-bold border-l-4 border-turquoise pl-6 bg-white text-[#072255] rounded-lg px-4 py-2">
                                                                {
                                                                    logoSection.titre_section
                                                                }
                                                            </h3>
                                                        </div>

                                                        {logoSection.img_section && (
                                                            <div class="bg-blanc rounded-2xl overflow-hidden p-8">
                                                                <img
                                                                    src={getImageUrl(
                                                                        logoSection,
                                                                        logoSection.img_section,
                                                                    )}
                                                                    alt={
                                                                        logoSection.titre_section
                                                                    }
                                                                    class="w-full h-auto object-contain"
                                                                />
                                                            </div>
                                                        )}

                                                        <div class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-6">
                                                            <p class="text-blanc text-base leading-relaxed whitespace-pre-line">
                                                                {
                                                                    logoSection.description_section
                                                                }
                                                            </p>
                                                        </div>
                                                    </div>

                                                    {/* Colonne droite : Mockup */}
                                                    <div class="space-y-6">
                                                        <div class="flex items-center gap-4">
                                                            <span class="text-4xl font-bold text-turquoise/20">
                                                                {String(
                                                                    otherSections.length +
                                                                        2,
                                                                ).padStart(
                                                                    2,
                                                                    "0",
                                                                )}
                                                            </span>
                                                            <h3 class="text-3xl font-bold border-l-4 border-turquoise pl-6 bg-white text-[#072255] rounded-lg px-4 py-2">
                                                                {
                                                                    mockupSection.titre_section
                                                                }
                                                            </h3>
                                                        </div>

                                                        {mockupSection.img_section && (
                                                            <div class="bg-blanc rounded-2xl overflow-hidden p-8">
                                                                <img
                                                                    src={getImageUrl(
                                                                        mockupSection,
                                                                        mockupSection.img_section,
                                                                    )}
                                                                    alt={
                                                                        mockupSection.titre_section
                                                                    }
                                                                    class="w-full h-auto object-contain"
                                                                />
                                                            </div>
                                                        )}
                                                    </div>
                                                </div>
                                            )}
                                        </>
                                    );
                                })()}
                            </div>
                        ) : (
                            <div class="bg-orange-500/10 border border-orange-500/30 rounded-xl p-8">
                                <p class="text-orange-300 text-center">
                                    ⚠️ Aucune section trouvée pour ce projet.
                                </p>
                            </div>
                        )
                    }
                </div>
                <!-- FIN DE LA SECTION 1 -->

                <!-- Section 2 : Mon rôle -->
                <div class="content-section hidden" data-section="role">
                    <div class="flex items-center gap-4 mb-8">
                        <h2 class="text-3xl font-bold text-turquoise">
                            Mon rôle
                        </h2>
                    </div>
                    <div
                        class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-8"
                    >
                        <p
                            class="text-blanc text-lg leading-relaxed whitespace-pre-line"
                        >
                            {projet.mon_role}
                        </p>
                    </div>
                </div>

                <!-- Section 3 : Logiciels utilisés -->
                <div class="content-section hidden" data-section="logiciels">
                    <div class="flex items-center gap-4 mb-8">
                        <h2 class="text-3xl font-bold text-turquoise">
                            Logiciels utilisés
                        </h2>
                    </div>
                    <div
                        class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-8"
                    >
                        <p
                            class="text-blanc text-lg leading-relaxed whitespace-pre-line"
                        >
                            {projet.logiciels_utilises}
                        </p>
                    </div>
                </div>
                <!-- Section 4 : Lien du site -->
                <!-- Section 4 : Lien du site -->
                <div class="content-section hidden" data-section="lien">
                    <div class="flex items-center gap-4 mb-8">
                        <h2 class="text-3xl font-bold text-turquoise">
                            Lien du site
                        </h2>
                    </div>
                    <div
                        class="bg-turquoise/10 border border-turquoise/30 rounded-xl p-8"
                    >
                        {
                            projet.lien_site ? (
                                <a
                                    class="break-all text-turquoise inline-flex text-xl font-semibold hover:underline items-center gap-2"
                                    href={projet.lien_site}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    {projet.lien_site}
                                    <svg
                                        class="w-6 h-6"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        />
                                    </svg>
                                </a>
                            ) : (
                                <p class="text-blanc/70">
                                    Aucun lien disponible
                                </p>
                            )
                        }
                    </div>
                </div>
            </div>

            <!-- Bouton retour -->
            <div class="mt-16 text-center">
                <a
                    href="/projet/projets"
                    class="inline-flex items-center gap-2 border-2 border-turquoise text-turquoise hover:bg-turquoise hover:text-bleu-fonce font-semibold px-8 py-4 rounded-lg transition-all duration-300"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Retour aux projets
                </a>
            </div>

            <script>
                // Gestion de l'accordéon
                const buttons = document.querySelectorAll(".accordion-btn");
                const sections = document.querySelectorAll(".content-section");

                buttons.forEach((button) => {
                    button.addEventListener("click", () => {
                        const sectionName = button.getAttribute("data-section");

                        // Retirer l'état actif de tous les boutons
                        buttons.forEach((btn) => {
                            btn.classList.remove(
                                "bg-turquoise/10",
                                "border-turquoise",
                            );
                            btn.classList.add(
                                "bg-transparent",
                                "border-turquoise/30",
                            );
                        });

                        // Ajouter l'état actif au bouton cliqué
                        button.classList.remove(
                            "bg-transparent",
                            "border-turquoise/30",
                        );
                        button.classList.add(
                            "bg-turquoise/10",
                            "border-turquoise",
                        );

                        // Cacher toutes les sections
                        sections.forEach((section) => {
                            section.classList.add("hidden");
                            section.classList.remove("active");
                        });

                        // Afficher la section correspondante
                        const targetSection = document.querySelector(
                            `.content-section[data-section="${sectionName}"]`,
                        );
                        if (targetSection) {
                            targetSection.classList.remove("hidden");
                            targetSection.classList.add("active");
                        }
                    });
                });
            </script>

            <style>
                .content-section {
                    animation: fadeIn 0.3s ease-in-out;
                }

                @keyframes fadeIn {
                    from {
                        opacity: 0;
                        transform: translateY(10px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
            </style>
        </div>
    </section>
</Layout>
