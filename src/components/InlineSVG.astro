---
const { class: className = "", delay = 0 } = Astro.props;
---

<div class={`animated-svg ${className}`} data-svg-animate data-delay={delay}>
    <slot />
</div>

<script>
    function initSVGAnimations() {
        const containers = document.querySelectorAll('[data-svg-animate]');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const container = entry.target as HTMLElement;
                    const delay = parseFloat(container.dataset.delay || '0');
                    const svg = container.querySelector('svg');
                    
                    if (svg) {
                        setTimeout(() => {
                            animateSVG(svg);
                        }, delay * 1000);
                    }
                    
                    observer.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.3, // Animation se déclenche quand 30% de la section est visible
            rootMargin: '0px 0px -100px 0px'
        });

        containers.forEach(container => observer.observe(container));
    }

    function animateSVG(svg: SVGElement) {
        const paths = svg.querySelectorAll('path[stroke]');
        const lines = svg.querySelectorAll('line');
        const circles = svg.querySelectorAll('circle');
        
        // Animer d'abord les paths et lines (tracé)
        [...paths, ...lines].forEach((element, index) => {
            const svgElement = element as SVGGeometryElement;
            const length = svgElement.getTotalLength?.() || 1000;
            
            (element as HTMLElement).style.strokeDasharray = `${length}`;
            (element as HTMLElement).style.strokeDashoffset = `${length}`;
            
            setTimeout(() => {
                (element as HTMLElement).style.transition = 'stroke-dashoffset 2s cubic-bezier(0.4, 0, 0.2, 1)';
                (element as HTMLElement).style.strokeDashoffset = '0';
            }, index * 100);
        });
        
        // Animer ensuite les cercles (apparition progressive)
        circles.forEach((circle, index) => {
            (circle as HTMLElement).style.opacity = '0';
            (circle as HTMLElement).style.transform = 'scale(0)';
            
            setTimeout(() => {
                (circle as HTMLElement).style.transition = 'opacity 0.6s ease, transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1)';
                (circle as HTMLElement).style.opacity = '1';
                (circle as HTMLElement).style.transform = 'scale(1)';
            }, 1000 + index * 300); // Commence après les tracés
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initSVGAnimations);
    } else {
        initSVGAnimations();
    }

    document.addEventListener('astro:page-load', initSVGAnimations);
</script>

<style is:global>
    .animated-svg svg {
        width: 100%;
        height: auto;
    }
</style>
