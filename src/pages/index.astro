<ScrollReveal>
    <!-- Section Mes projets -->
    <section
        data-scroll-reveal
        data-direction="up"
        data-delay="0"
        class="relative py-20 px-6 overflow-hidden"
        style="background-color: #053361;"
    >
        <div class="relative z-10 max-w-7xl mx-auto">
            <h2 class="text-turquoise text-4xl font-bold mb-4">Mes projets</h2>
            <p class="text-blanc text-lg mb-16">Voici les projets que j'ai réalisés</p>

            <div class="relative flex items-center justify-center gap-8">
                <!-- Bouton gauche -->
                <button id="prev-btn" class="flex-shrink-0 w-16 h-16 border-2 border-turquoise rounded-lg flex items-center justify-center hover:bg-turquoise/20 transition-colors">
                    <img src="/icon/fleche-gauche.svg" alt="Précédent" class="w-8 h-8" />
                </button>

