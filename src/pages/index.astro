    <!-- Hero Section avec SVG animés -->
<section class="relative w-full h-screen overflow-hidden flex items-center justify-center hero-gradient">
    
    <!-- Cercles concentriques en arrière-plan avec animations de tracé -->
    <div class="absolute inset-0 flex items-center justify-center">
        
        <!-- Ellipse 3 (cercle externe) -->
