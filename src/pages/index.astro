</script>
<script>
	function animateHeroSVGs() {
		const containers = document.querySelectorAll(".hero-svg-animate");

		containers.forEach((container) => {
			const delay = parseInt(container.dataset.delay || "0");
			const svg = container.querySelector("svg");
			const shouldSpin = container.classList.contains("hero-svg-spin");

			if (svg) {
				const elements = svg.querySelectorAll(".hero-path");

				elements.forEach((element, index) => {
					const svgElement = element as SVGGeometryElement;
					const length = svgElement.getTotalLength?.() || 3000;

					// Configuration initiale
					(element as HTMLElement).style.strokeDasharray =
						`${length}`;
					(element as HTMLElement).style.strokeDashoffset =
						`${length}`;

					// Animation de tracé
					setTimeout(
						() => {
							(element as HTMLElement).style.transition =
								"stroke-dashoffset 2.5s cubic-bezier(0.4, 0, 0.2, 1)";
							(element as HTMLElement).style.strokeDashoffset =
								"0";
						},
						delay + index * 150,
					);
				});

				// Après l'animation de tracé, lance la rotation
				if (shouldSpin) {
					setTimeout(() => {
						container.style.animation =
							"spin-slow 20s linear infinite";
					}, delay + 2500);
				}
			}
		});
	}

	// Init au chargement
	if (document.readyState === "loading") {
		document.addEventListener("DOMContentLoaded", animateHeroSVGs);
	} else {
		animateHeroSVGs();
	}
</script>

