---
import ScrollReveal from "../components/ScrollReveal.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<!-- Hero Section - Pas d'animation (section d'entrée) -->
	<!-- Hero Section avec SVG animés -->
	<section
		class="relative w-full h-screen overflow-hidden flex items-center justify-center hero-gradient"
	>
		<!-- Cercles concentriques en arrière-plan avec animations de tracé -->
		<div class="absolute inset-0 flex items-center justify-center">
			<!-- Ellipse 3 (cercle externe) -->
			<div class="absolute hero-svg-animate" data-delay="0">
				<svg
					width="1440"
					height="1048"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					class="opacity-80"
				>
					<circle
						cx="720"
						cy="556"
						r="781.5"
						stroke="#4F8FFF"
						stroke-opacity=".79"
						class="hero-path"></circle>
				</svg>
			</div>

			<!-- Ellipse 4 (cercle moyen) -->
			<div class="absolute hero-svg-animate" data-delay="300">
				<svg
					width="1276"
					height="1048"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					class="opacity-75"
				>
					<path
						d="M638-101.5c352.07 0 637.5 292.794 637.5 654s-285.43 654-637.5 654S.5 913.706.5 552.5s285.43-654 637.5-654z"
						stroke="#78F4FF"
						stroke-opacity=".74"
						class="hero-path"></path>
				</svg>
			</div>

			<!-- Ellipse 6 (arcs partiels) -->
			<div class="absolute hero-svg-animate" data-delay="600">
				<svg
					width="459"
					height="473"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
				>
					<path
						d="M41.121 377.887C84.028 435.33 152.431 472.5 229.487 472.5c77.056 0 145.459-37.17 188.366-94.613M.487 182.284C24.905 78.077 118.166.5 229.487.5s204.582 77.577 229 181.784"
						stroke="#00EAFF"
						class="hero-path"></path>
				</svg>
			</div>

			<!-- Group 9-8 (cercle central rotatif avec tracé) -->
			<div
				class="absolute hero-svg-animate hero-svg-spin"
				data-delay="900"
			>
				<svg
					width="923"
					height="904"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					class="glow-circle"
				>
					<g filter="url(#a)">
						<path
							d="M461.5 139.5c175.629 0 318 142.152 318 317.5s-142.371 317.5-318 317.5-318-142.152-318-317.5 142.371-317.5 318-317.5z"
							stroke="#00EAFF"
							stroke-width="3"
							shape-rendering="crispEdges"
							class="hero-path"></path>
					</g>
					<g filter="url(#b)">
						<mask id="c" fill="#fff">
							<path
								d="M909 457a446.6 446.6 0 00-52.84-210.714A447.18 447.18 0 00710.118 85.333a447.824 447.824 0 00-204.755-73.18 447.955 447.955 0 00-215.114 31.873 447.466 447.466 0 00-174.671 129.4 446.787 446.787 0 00-92.98 196.369A446.516 446.516 0 0033.27 586.757a446.898 446.898 0 00111.801 186.32l92.969-92.866a315.604 315.604 0 01-78.953-131.577 315.33 315.33 0 01-7.535-153.218 315.527 315.527 0 0165.661-138.674 315.996 315.996 0 01123.352-91.381 316.344 316.344 0 01151.912-22.509 316.24 316.24 0 01144.596 51.68 315.789 315.789 0 01103.134 113.663A315.392 315.392 0 01777.521 457H909z"
