	<style>
		/* Animation de tracé SVG */
		[data-svg-animate] svg path,
		[data-svg-animate] svg line,
		[data-svg-animate] svg polyline {
			stroke-dasharray: 1000;
			stroke-dashoffset: 1000;
			transition: stroke-dashoffset 2s cubic-bezier(0.4, 0, 0.2, 1);
		}

		[data-svg-animate].visible svg path,
		[data-svg-animate].visible svg line,
		[data-svg-animate].visible svg polyline {
			stroke-dashoffset: 0;
		}

		/* Animation pour les cercles */
		[data-svg-animate] svg circle {
			stroke-dasharray: 1000;
			stroke-dashoffset: 1000;
			transition: stroke-dashoffset 1.5s cubic-bezier(0.4, 0, 0.2, 1);
		}

		[data-svg-animate].visible svg circle {
			stroke-dashoffset: 0;
		}

		/* Effet de glow progressif */
		[data-svg-animate].visible svg path,
		[data-svg-animate].visible svg line {
			filter: drop-shadow(0 0 8px rgba(0, 255, 238, 0.6));
			transition: filter 0.5s ease-in-out 1s;
		}
		/* Masquer les éléments avant l'animation */
		.timeline-content {
			opacity: 0;
			transform: translateY(20px);
			transition:
				opacity 0.8s ease,
				transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
		}

		/* Animation des textes */
		.timeline-content.visible {
			opacity: 1;
			transform: translateY(0);
		}

		/* Délais progressifs pour les textes */
		.timeline-content:nth-child(1) {
			transition-delay: 1.5s;
		}
		.timeline-content:nth-child(2) {
			transition-delay: 1.8s;
		}
		.timeline-content:nth-child(3) {
			transition-delay: 2.1s;
		}
		.timeline-content:nth-child(4) {
			transition-delay: 2.4s;
		}
		.timeline-content:nth-child(5) {
			transition-delay: 2.7s;
		}
	</style>
	<script>
    function animateTimelineTexts() {
        const timelineSection = document.getElementById('timeline-texts');
        if (!timelineSection) return;
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const texts = entry.target.querySelectorAll('.timeline-content');
                    texts.forEach(text => {
                        text.classList.add('visible');
                    });
                    observer.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.3,
            rootMargin: '0px 0px -100px 0px'
        });

        observer.observe(timelineSection);
    }

    // Init
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', animateTimelineTexts);
    } else {
        animateTimelineTexts();
    }

    document.addEventListener('astro:page-load', animateTimelineTexts);
</script>

