import Layout from "../../layouts/Layout.astro";
import {
    pb,
    type Projet,
    type SectionProjet,
    getImageUrl,
} from "../../lib/pocketbase";

// R√©cup√©ration de l'ID depuis les params
const { id } = Astro.params;

// Fetch du projet depuis PocketBase
let projet: Projet | null = null;
let sections: SectionProjet[] = [];
let error: string | null = null;

try {
    // R√©cup√©rer le projet
    projet = await pb.collection("projet").getOne<Projet>(id!);
    console.log("‚úÖ Projet r√©cup√©r√©:", projet);

    // Essayer d'abord avec le filtre PocketBase
    try {
        sections = await pb
            .collection("sections_projets")
            .getFullList<SectionProjet>({
                filter: `projet_id = "${id}"`,
                sort: "+ordre", // + pour ascendant, si le champ n'existe pas, il sera ignor√©
            });
        console.log(
            "‚úÖ Sections avec filtre PocketBase:",
            sections.length,
            "sections trouv√©es",
        );
    } catch (filterError) {
        console.warn(
            "‚ö†Ô∏è Filtre PocketBase √©chou√©, tentative avec fetch manuel:",
            filterError,
        );

        // Si le filtre √©choue, r√©cup√©rer toutes les sections et filtrer manuellement
        const allSections = await pb
            .collection("sections_projets")
            .getFullList<SectionProjet>({
                sort: "created", // Tri par date de cr√©ation si pas d'ordre
            });

        console.log("üìã Toutes les sections r√©cup√©r√©es:", allSections.length);
        console.log("üîç D√©tails des sections:");
        allSections.forEach((section, index) => {
            console.log(`  Section ${index + 1}:`, {
                id: section.id,
                titre: section.titre_section,
                projet_id: section.projet_id,
                projet_id_type: typeof section.projet_id,
                id_recherche: id,
                id_type: typeof id,
                match: section.projet_id === id,
            });
        });

        // Filtrer manuellement
        sections = allSections.filter((section) => section.projet_id === id);
        console.log(
            "‚úÖ Sections filtr√©es manuellement:",
            sections.length,
            "sections trouv√©es",
        );
    }

    if (sections.length === 0) {
        console.warn("‚ö†Ô∏è ATTENTION: Aucune section trouv√©e pour ce projet !");
        console.log("ID du projet recherch√©:", id);
        console.log(
            "V√©rifiez que le champ projet_id dans PocketBase contient bien cet ID",
        );
    } else {
        console.log(
            "‚úÖ Sections trouv√©es:",
            sections.map((s) => ({
                titre: s.titre_section,
                projet_id: s.projet_id,
            })),
        );
    }
} catch (e) {
    error = "Projet non trouv√©";
    console.error("‚ùå Erreur compl√®te:", e);
}

// Si le projet n'existe pas, redirection
if (!projet) {
    return Astro.redirect("/projet/projets");
}

// Construction de l'URL de l'image hero
const imgHeroUrl = getImageUrl(projet, projet.img_hero);

// D√©finir les couleurs du hero en fonction du projet
const couleurConfig: Record<
    string,
    { from: string; via: string; to: string; decoration: string }
> = {
    violet: {
        from: "#2a1a4a",
        via: "#3a2a5a",
        to: "#4a1a5a",
        decoration: "#a855f7",
    },
    bleu: {
        from: "#1a1a4a",
        via: "#1a2a5a",
        to: "#0a3a5a",
        decoration: "#00ffee",
    },
    vert: {
        from: "#1a4a2a",
        via: "#1a5a3a",
        to: "#0a5a2a",
        decoration: "#10b981",
    },
    rose: {
        from: "#4a1a3a",
        via: "#5a1a4a",
        to: "#5a0a3a",
        decoration: "#ec4899",
    },
};

const couleur = projet.couleur_hero || "bleu";
const colors = couleurConfig[couleur] || couleurConfig.bleu;

// G√©n√©ration statique : retourne tous les projets
export async function getStaticPaths() {
    const projets = await pb.collection("projet").getFullList<Projet>();

    return projets.map((projet) => ({
        params: { id: projet.id },
    }));
}
